<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chungmyung.ndivident">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bigeyes"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Eventcost_Payment_Activity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FirstCalculationActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Result_message_Activity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".DetailCalculationActivity"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>